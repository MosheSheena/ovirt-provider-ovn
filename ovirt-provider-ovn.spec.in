%{_libexecdir}/vdsm/hooks/before_device_create/*
%{_libexecdir}/ovirt-provider-ovn
%{_libexecdir}/ovirt-provider-ovn/setup_ovn_controller.sh
# TODO use %{python_sitelib} here and in `make install`
